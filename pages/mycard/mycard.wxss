/* pages/mycard/mycard.wxss */
@import "../template/template.wxss";

.slide .slide-item {
  width: 100%;
  height: 100%;
  position: relative;
}

.slide .slide-item.a {
  background: url(https://api.91ygj.com/vcard/1.jpg);
  background-size: 100%;
}

.slide .slide-item.b {
  background: url(https://api.91ygj.com/vcard/2.jpg);
  background-size: 100%;
}

.slide .slide-item.c {
  background: url(https://api.91ygj.com/vcard/3.jpg);
  background-size: 100%;
}

.slide .slide-btn {
  position: absolute;
  bottom: 0;
  z-index: 999;
  font-size: 18px;
  color: #fff;
  padding: 20rpx;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
  width: 74.5%;
  margin: 10%;
  text-align: center;
}

